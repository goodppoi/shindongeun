$(function(){var n,t;$("#search_btn").click(function(){return doSearching($("#query").val()),!1});n=[];$("input[name='query']").bind("keyup.autocomplete input.autocomplete",function(t){if(t.keyCode==188||(t.keyCode==8||t.keyCode==9||t.keyCode==37||t.keyCode==38||t.keyCode==39||t.keyCode==40)&&$("input[name='query']").val()==""||t.keyCode==8&&$(this).val()==""||$(this).val()=="")return n.length=0,!1;$(this).val()!=""&&$(this).val()!=","&&$.ajax({type:"POST",url:url_path+"/Search/Get",data:"search_text="+$(this).val(),dataType:"json",cache:!1,success:function(t){n.length=0;$.each(t.response_data,function(t,i){n[t]=i.search_where})},error:function(){}})});t=!1;$(".btn_left_reveal").on("click",function(){$(".aside_layer").addClass("aside_show");$(".bg_mask").addClass("active");$("body").css("overflow","hidden")});$(".bg_mask,.btn_close_aside").on("click",function(){$(".aside_layer").removeClass("aside_show");$(".bg_mask").removeClass("active");$("body").css("overflow","auto")});$("#btn_layer_leave").click(function(n){n.preventDefault();$("#leave_popup").addClass("popup_show")});$("#btn_leave_no").click(function(n){n.preventDefault();$("#leave_popup").removeClass("popup_show")});$("#btn_leave_yes").click(function(n){if(n.preventDefault(),!confirm("정말 탈퇴하시겠습니까?\n주문 정보를 비롯한 회원님의 모든 정보는 재가입 하셔도 복구되지 않습니다."))return!1;var t=new FormData;t.append("user_idx",g_user_idx);$.ajax({type:"POST",url:url_path+"/user/Resign",data:t,dataType:"json",cache:!1,contentType:!1,processData:!1,jsonp:!1,success:function(n){if(n.response_code=="1000")alert("정상적으로 탈퇴 되었습니다."),localStorage.removeItem("app_token"),localStorage.removeItem("sns_type_idx"),localStorage.removeItem("token"),localStorage.clear(),location.href=stringFormat("/{0}logout",g_route_char);else return alert(n.response_message),!1}})})});