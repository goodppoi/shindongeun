;(function($){$.Toast=function(message,options){options=options||{};options.width=options.width||0;options.duration=options.duration||3000;options.class=options.class||'';options.position=options.position||'bottom';options.align=options.align||'right';options.zindex=options.zindex||999999;var css={'z-index':options.zindex};var $item=$('<div>'+message+'</div>').addClass('sl-notification');if(options.class!==''){$item.addClass(options.class);}
$item.data('position',options.position).data('align',options.align);if(options.width>0){css['width']=options.width+'px';}
var offsetSum=20;var padding=10;$('.sl-notification').each(function()
{var $toast=$(this);var val=0,offsetHeight=0;if($toast.data('position')===options.position&&$toast.data('align')===options.align){val=parseInt($toast.css(options.position),10);offsetHeight=$toast.outerHeight();}
return offsetSum=Math.max(offsetSum,val+offsetHeight+padding);});css[options.position]=offsetSum+'px';switch(options.align)
{case "center":css['left']='50%';css['margin-left']='-'+($item.outerWidth()/2)+'px';break;case "left":css['left']='20px';break;case "right":css['right']='20px';break;}
$item.css(css).appendTo(document.body);var time=0;setTimeout(function(){$item.addClass('show');},time+=100);setTimeout(function(){$item.removeClass('show');},time+=options.duration);setTimeout(function(){$item.remove();},time+=500);$('.sl-notification').on('click',function(){$(this).hide().remove();});};})(jQuery);